@model IEnumerable<HotelEntity.Class.Customers>

@{
    ViewBag.Title = "RegisterCustomer";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
}


    @if (Session["UserID"] != null)
    {
        <div style="margin-top:100px;">

            <h5>Register Customer</h5> <hr />
            <h4 class="success">@ViewBag.message</h4>
            <table class="table table-bordered table-hover table-striped">
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        PhoneNo
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer_Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer_PhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.ActionLink("BookingNow", "RoomNumber", new { id = item.Customer_Id }) |
                            @Html.ActionLink("BookingDetails", "CustomerBookingRoom", new { id = item.Customer_Id }) |
                        </td>
                    </tr>
                }

            </table>
        </div>
    }

   